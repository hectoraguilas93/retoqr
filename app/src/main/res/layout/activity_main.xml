<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

<LinearLayout
    android:orientation="vertical"
    android:id="@+id/principal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:id="@+id/Motivodepago"
        android:hint="Motivo de pago"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/clabe_tarjeta"
        android:hint="Cuenta CLABE/ tarjeta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Spinner
        android:id="@+id/claveCuenta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/tipocuenta" />


    <EditText
        android:id="@+id/refbenefi"
        android:hint="nombre de beneficiario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/montoTransfer"
        android:hint="Monto a transferir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    
    <Button
        android:id="@+id/transfer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Transferir"/>


</LinearLayout>

    <LinearLayout
        android:id="@+id/codeqr"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@mipmap/ic_launcher" />

        <Button
            android:id="@+id/backTransaction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Regresar"/>



    </LinearLayout>




</LinearLayout>